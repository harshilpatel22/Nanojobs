{
  "name": "nanojobs-backend",
  "version": "1.0.0",
  "description": "NanoJobs Backend API Server",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed:trial-tasks": "node src/scripts/seed.js",
    "debug": "nodemon debug-server.js",
    "minimal": "node minimal-server.js",
    "test": "jest",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --accept-data-loss",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "node src/scripts/seed.js",
    "migrate:deploy": "prisma migrate deploy",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-rate-limit": "7.1.5",
    "express-validator": "7.0.1",
    "helmet": "7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "1.6.0",
    "multer": "1.4.4",
    "node-schedule": "2.1.1",
    "pdf-parse": "1.1.1",
    "prisma": "^5.7.1",
    "uuid": "9.0.1",
    "winston": "3.11.0"
  },
  "devDependencies": {
    "jest": "29.7.0",
    "nodemon": "3.0.1",
    "supertest": "6.3.3"
  },
  "keywords": [
    "nanojobs",
    "micro-tasks",
    "gig-economy",
    "india"
  ],
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "author": "NanoJobs Team",
  "license": "MIT"
}
